# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
   
# Optional: Use a different model; OpenAI-4o or Claude 3.5 Sonnet
OPENAI_MODEL=gpt-4o
   
# Serper.dev for Search Capabilities
SERPER_API_KEY=your_serper_api_key_here

# Application Configuration
APP_NAME='Recruitment Assistant'
APP_ENV=development
   
# CrewAI Configuration (if needed)
CREWAI_TELEMETRY_OPT_OUT=true
CREWAI_TRACING_ENABLED=false
CREWAI_AOP_ACCOUNT=
CREWAI_AOP_API_KEY=
CREWAI_AOP_PROJECT=recruitment-assistant
CREWAI_DASHBOARD_URL=https://app.crewai.ai/aop

# Logging overrides (dev uses DEBUG; prod defaults to INFO)
DEV_LOG_LEVEL=DEBUG
DEV_FILE_LOG_LEVEL=DEBUG
DEV_ERROR_LOG_LEVEL=ERROR
PROD_LOG_LEVEL=INFO
PROD_FILE_LOG_LEVEL=INFO
PROD_ERROR_LOG_LEVEL=ERROR

# Optional service keys
SERPER_API_KEY=your_serper_api_key_here
BROWSERLESS_API_KEY=your_browserless_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here
FEATURE_FLAG_BIAS_ALERTS=true
API_BASE_URL=http://localhost:8000
DATABASE_URL=sqlite:///./data/dev.db
